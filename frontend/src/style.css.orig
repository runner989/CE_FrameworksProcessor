/* Base Theme */
body {
    background-color: #0e0e0e;
    color: #39ff14;
    font-family: 'Orbitron', sans-serif;
}

/* Buttons */
button {
    border: 2px solid #0ff;
    background: transparent;
    color: #0ff;
    font-family: 'Oxanium', sans-serif;
    padding: 10px 20px;
    margin: 10px;
    cursor: pointer;
    transition: 0.3s ease;
    position: relative;
    overflow: hidden;
}

button:hover {
    background-color: #0ff;
    color: #0e0e0e;
    box-shadow: 0 0 15px #0ff, 0 0 30px #39ff14;
}

button::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(120deg, transparent, rgba(0, 255, 255, 0.5), transparent);
    transition: left 0.5s;
}

button:hover::before {
    left: 100%;
}

/* Input Fields */
input {
    background-color: #1a1a1a;
    border: 2px solid #39ff14;
    color: #0ff;
    padding: 10px;
    font-family: 'Oxanium', sans-serif;
    outline: none;
    transition: border 0.3s ease;
}

input:focus {
    border-color: #0ff;
    box-shadow: 0 0 10px #0ff;
}

/* Animated Glow for Modals */
.modal-content {
    background-color: #1a1a1a;
    border: 2px solid #39ff14;
    box-shadow: 0 0 20px #39ff14, 0 0 40px #0ff;
    animation: pulse 2s infinite;
}

@keyframes pulse {
    0%, 100% {
        box-shadow: 0 0 20px #39ff14, 0 0 40px #0ff;
    }
    50% {
        box-shadow: 0 0 10px #39ff14, 0 0 20px #0ff;
    }
}

/* Table Styling */
table {
    width: 100%;
    border-collapse: collapse;
    margin-top: 20px;
}

th, td {
    border: 1px solid #39ff14;
    padding: 10px;
    text-align: center;
}

/* Animating Table Rows on Hover */
tbody tr:hover {
    background-color: #39ff14;
    color: #0e0e0e;
    transition: background-color 0.3s, color 0.3s;
}

/* Cool Scrolling Effects */
::-webkit-scrollbar {
    width: 10px;
}

::-webkit-scrollbar-track {
    background: #0e0e0e;
}

::-webkit-scrollbar-thumb {
    background: #39ff14;
}
